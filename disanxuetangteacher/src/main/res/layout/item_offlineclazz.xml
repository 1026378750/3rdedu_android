<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_offlineclazz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_16sp"
            tools:text="高中语文-高中语文现代文阅读理解" />

        <TextView
            android:id="@+id/tv_offlineclazz_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|right"
            android:padding="10dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp"
            tools:text="1小时/次" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_offlineclazz_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/size_12sp"
        tools:text="增加学生对现代文的于都理解能力，增加学生对现代文…" />

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_offlineclazz_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="学生上门"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp" />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_offlineclazz_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="老师上门"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp" />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_offlineclazz_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="--"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="校区上课"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>