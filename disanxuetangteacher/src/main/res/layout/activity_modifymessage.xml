<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_modify_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background_res="@drawable/status_bgcolor"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_white_left_arrow"
        app:right_button_text="保存"
        app:right_button_textColor="@color/color_ffffff"
        app:right_button_textSize="@dimen/size_14px"
        app:show_left_button="true"
        app:title_text="测试"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_17px" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_maxeducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dialog_backgrounds"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_black_down_arrow"
                android:ellipsize="end"
                android:hint="请选择最高学历"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/size_14sp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/et_modify_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialog_backgrounds"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/size_14sp"
                tools:text="数据" />

            <LinearLayout
                android:id="@+id/ll_modify_introlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialog_backgrounds"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_modify_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="介绍一下自己吧"
                    android:lineSpacingExtra="3dp"
                    android:minLines="3"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tv_modify_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50-200字"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/size_10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_modify_agelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialog_backgrounds"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/ll_modify_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:hint="请输入教龄"
                    android:inputType="number"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="年"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_10sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/tv_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dialog_backgrounds"
                android:ellipsize="end"
                android:hint="请输入专业"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/size_14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/et_modify_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="最多15个字，可以为汉字、数字、字母或组合。"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
