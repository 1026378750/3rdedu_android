<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_coursbuyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号:"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:id="@+id/tv_buyer_ordernum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_14sp"
            tools:text="398978e789" />

        <TextView
            android:id="@+id/tv_buyer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp"
            tools:text="3-26 16:00" />
    </LinearLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/tv_buyer_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/default_error" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_buyer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tv_buyer_type"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_16sp"
                tools:text="李子园的父亲" />

            <TextView
                android:id="@+id/tv_buyer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_16sp"
                tools:text="父亲" />

            <TextView
                android:id="@+id/tv_buyer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_14sp"
                tools:text="号码" />

            <TextView
                android:id="@+id/tv_buyer_jointimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_14sp"
                tools:text="17次课" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/vp_course"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_color" />
</LinearLayout>