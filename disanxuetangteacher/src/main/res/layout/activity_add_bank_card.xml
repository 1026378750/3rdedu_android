<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_dollar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_blank_left_arrow"
        app:show_left_button="true"
        app:title_text="添加银行卡"
        app:title_textColor="@color/color_333333"
        app:title_textSize="@dimen/size_17px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_add_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户银行"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bankselect_bank"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_add_bank"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dialog_backgrounds"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_black_down_arrow"
            android:ellipsize="end"
            android:hint="请选择银行"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_d8d8d8"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_banksselect_name"
            android:text="开户支行"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/tv_banksselect_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_bankselect_bank"
            android:background="@drawable/dialog_backgrounds"
            android:gravity="left"
            android:hint="请输入开户支行"
            android:lineSpacingExtra="3dp"
            android:padding="10dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_d8d8d8"
            android:textSize="@dimen/size_14sp"
            android:layout_alignTop="@+id/tv_bankselect_bank" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="银行卡号码"
        android:textColor="@color/color_333333"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_addbank_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_backgrounds"
        android:ellipsize="end"
        android:gravity="left"
        android:hint="请输入银行卡号码"
        android:inputType="number"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_d8d8d8"
        android:textSize="@dimen/size_14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginTop="20dp"
        android:text="省、市"
        android:textColor="@color/color_333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_addressselect_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_backgrounds"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/ic_black_down_arrow"
        android:ellipsize="end"
        android:hint="请选择省、市"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_d8d8d8"
        android:textSize="@dimen/size_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/tv_addbank_comfirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg_default_cancel"
        android:text="保存"
        android:enabled="false"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/size_14sp" />


</LinearLayout>