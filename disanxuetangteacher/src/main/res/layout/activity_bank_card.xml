<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_dollar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background ="@color/color_ffffff"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_blank_left_arrow"
        app:right_button_text="更换银行卡"
        app:right_button_textColor="@color/color_333333"
        app:right_button_textSize="@dimen/size_15px"
        app:show_left_button="true"
        app:title_text="银行卡"
        app:title_textColor="@color/color_333333"
        app:title_textSize="@dimen/size_17px" />

    <RelativeLayout
        android:id="@+id/rl_add_bank_card"
        android:layout_width="343dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/mine_add_back"
        android:scaleType="fitCenter">

        <ImageView
            android:id="@+id/iv_bank_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:padding="@dimen/size_15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:layout_toRightOf="@+id/iv_bank_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_add_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5sp"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/size_17sp"
                tools:text="张**" />

            <TextView
                android:id="@+id/tv_add_bank_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/size_17sp"
                tools:text="中国银行" />

            <TextView
                android:id="@+id/tv_add_bank_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/size_17sp"
                tools:text="**** ***** **** 0745" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="绑定银行卡说明"
        android:textColor="@color/color_333333" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="1. 绑定银行卡的目的仅限于钱包提现。"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_12sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="2. 为了您的资金安全，请添加本人银行卡。"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_12sp" />

    <TextView
        android:id="@+id/tv_ccb_add_bank_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_12sp" />
</LinearLayout>