<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_dollar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background_res="@color/color_ffffff"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_blank_left_arrow"
        app:show_left_button="true"
        app:title_text="绑定助教"
        app:title_textColor="@color/color_333333"
        app:title_textSize="@dimen/size_17px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10dp"
        android:background="@drawable/bg_edittext_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_oneclazzoperator_school"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入助教号码"
            android:inputType="number|numberDecimal"
            android:padding="13dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_d8d8d8"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:id="@+id/tv_bindingassintant_select"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_right_checked2"
            android:text="查询"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_12sp" />
    </LinearLayout>

    <com.main.disanxuelib.view.RefreshCommonView
        android:id="@+id/rcv_mine_commonlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        app:noneImage="@mipmap/ic_nothing"
        app:noneText="太糟糕了~ 什么都没有查到…"
        app:orientation="vertical"
        app:vessel_type="RecyclerView" />

</LinearLayout>