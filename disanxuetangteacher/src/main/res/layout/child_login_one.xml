<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/size_40dp"
    android:paddingLeft="@dimen/size_16dp"
    android:paddingRight="@dimen/size_16dp"
    android:paddingTop="@dimen/size_40dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_round_white"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingBottom="10dp"
        >

        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@null"
            android:drawablePadding="8dp"
            android:drawableLeft="@mipmap/login_user"
            android:padding="15dp"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="15"
            android:ellipsize="end"
            android:textSize="@dimen/size_12sp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:hint="十一位手机号"
            />

        <View style="@style/line_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <EditText
                android:id="@+id/et_login_userpwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="8dp"
                android:drawableLeft="@mipmap/login_verification"
                android:hint="六位数验证码"
                android:padding="15dp"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/size_12sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_color"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                />

            <TextView
                android:id="@+id/tv_login_sendcode"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/color_ff1d97ea"
                android:textSize="@dimen/size_11sp" />
        </LinearLayout>
        <View style="@style/line_style"/>

        <TextView
            android:id="@+id/tv_loginone_notify"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:gravity="center_horizontal"
            android:textColor="@color/color_d92b2b"
            android:textSize="@dimen/size_10sp"
            tools:text="提示信息"
            />
        <Button
            android:id="@+id/et_login_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_login_status"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_15sp"
            android:text="登录/注册"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b99a9"
                android:textSize="@dimen/size_12sp"
                android:text="登录即表示同意"
                />
            <TextView
                android:id="@+id/tv_login_fwxy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff1d97ea"
                android:textSize="@dimen/size_12sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:text="服务协议"
                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_head_3rd_pressed"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
