<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程图片"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <ImageView
                android:id="@+id/tv_onlivedetail_image"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginLeft="32dp"
                android:scaleType="fitXY"
                android:src="@mipmap/default_iamge" />

        </LinearLayout>

        <View style="@style/line_style" />

        <LinearLayout style="@style/linlayout_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程名称"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_coursename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="课程名称" />

        </LinearLayout>

        <View style="@style/line_style" />

        <LinearLayout style="@style/linlayout_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授课科目"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="授课科目" />

        </LinearLayout>

        <View style="@style/line_style" />

        <LinearLayout style="@style/linlayout_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授课阶段"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="授课阶段" />

        </LinearLayout>

        <View style="@style/line_style" />

        <LinearLayout style="@style/linlayout_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播类型"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="直播类型" />

        </LinearLayout>

        <View style="@style/line_style" />

        <LinearLayout style="@style/linlayout_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数上限"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="人数上限" />


        </LinearLayout>

        <LinearLayout
            style="@style/linlayout_style"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程次数"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="课程次数" />

        </LinearLayout>

        <View style="@style/line_style" />

        <LinearLayout style="@style/linlayout_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单次时长"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_signaltime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="单次时长" />


        </LinearLayout>

        <View style="@style/line_style" />

        <LinearLayout style="@style/linlayout_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单次价格"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_signalprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="单次价格" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_ffffff"
            android:paddingLeft="@dimen/size_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程简介"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:lineSpacingExtra="3dp"
                android:padding="10dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="课程简介" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_onlivedetail_infonum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="0字"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_ffffff"
            android:paddingLeft="@dimen/size_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教学目标"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:lineSpacingExtra="3dp"
                android:padding="10dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="教学目标" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_onlivedetail_targetnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="0字"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_ffffff"
            android:paddingLeft="@dimen/size_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适用人群"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/tv_onlivedetail_fitcrowd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:lineSpacingExtra="3dp"
                android:padding="10dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="适用人群" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_onlivedetail_fitcrowdnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="0字"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp" />


        <Button
            android:id="@+id/tv_onlivedetail_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="删除"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_15sp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>