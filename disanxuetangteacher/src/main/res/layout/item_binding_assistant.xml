<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_backgrounds"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_binding_photoUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_personal_avatar"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_binding_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="张婉君"
            android:layout_margin="@dimen/size_10dp"
            android:textColor="@color/color_333333"
            />
        <TextView
            android:id="@+id/tv_binding_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13821887214"
            android:layout_margin="@dimen/size_10dp"
            android:layout_below="@+id/tv_binding_name"
            />

        <TextView
            android:id="@+id/tv_binding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:padding="@dimen/size_10dp"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/btn_round_green_pressed"
            />

    </RelativeLayout>
</LinearLayout>