<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_offlineclazz"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/color_ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:padding="@dimen/size_10dp"
        >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            >
            <ImageView
                android:id="@+id/iv_hot_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_head_3rd_normal" />
            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="互动小班课"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp"
                android:layout_alignParentBottom="true"
                android:padding="8dp"
                android:gravity="center"
                android:background="@color/transparent_f0f5"
                android:visibility="gone"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_subjct_class_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李天霸"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_16sp"
                    android:maxLines="5"
                    />
                <TextView
                    android:id="@+id/tv_offline_mannum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    tools:text="32/40人"
                    android:text="32/40人"
                    android:textSize="@dimen/size_12sp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:layout_marginTop="@dimen/size_10dp"
                >
                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp"
                    tools:text="2小时/次，共20次" />

                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:paddingLeft="@dimen/size_10dp"
                    android:textColor="@color/color_d92b2b"
                    android:textSize="@dimen/size_16sp"
                    tools:text="¥4000" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>