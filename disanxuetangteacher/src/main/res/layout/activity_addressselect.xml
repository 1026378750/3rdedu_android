<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background_res="@drawable/status_bgcolor"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_white_left_arrow"
        app:show_left_button="true"
        app:title_text="授课地址"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_17px"
        app:right_button_textColor="@color/color_ffffff"
        app:right_button_text="确定"
        app:right_button_textSize="@dimen/size_14px"
        />

    <TextView
        android:id="@+id/tv_addressselect_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/dialog_backgrounds"
        android:padding="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_14sp"
        tools:text="地址" />

    <TextView
        android:id="@+id/tv_addressselect_direct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_backgrounds"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/ic_black_down_arrow"
        android:hint="请选择市区"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="10dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/size_14sp" />

    <EditText
        android:id="@+id/tv_addressselect_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/dialog_backgrounds"
        android:padding="10dp"
        android:gravity="left"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/size_14sp"
        android:hint="街道/楼/门牌号/室" />

</LinearLayout>