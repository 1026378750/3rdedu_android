<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_dollar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background_res="@drawable/status_bgcolor"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_white_left_arrow"
        app:right_button_text=""
        app:right_button_textColor="@color/color_ffffff"
        app:right_button_textSize="@dimen/size_14px"
        app:show_left_button="true"
        app:title_text="我的助教"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_17px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/status_bgcolor" />

        <ImageView
            android:id="@+id/iv_sisant_head"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/cyclo_white"
            android:padding="1dp"
            android:src="@mipmap/mine_assistant_head" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/iv_sisant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_17sp"
            tools:text="老师姓名" />

        <TextView
            android:id="@+id/tv_mine_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg_default_cancel"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_12sp"
            tools:text="绑定助教" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:visibility="gone"
            tools:text="您目前还未绑定助教。" />

        <TextView
            android:id="@+id/tv_sistant_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            tools:text="    我们会尽快为您绑定助教，您也可以自行绑定" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="您的助教会帮助您处理哪些事情？"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_14sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="线下1对1调课问题"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="提现迟迟没有到账"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="直播平台不会使用"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="帮助您快速出售课程"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_12sp" />

</LinearLayout>
