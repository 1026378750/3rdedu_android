<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/offlinedetail_ccb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background_res="@drawable/status_bgcolor"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_white_left_arrow"
        app:right_button_text="编辑"
        app:right_button_textColor="@color/color_ffffff"
        app:right_button_textSize="@dimen/size_14px"
        app:show_left_button="true"
        app:title_text="课程详情"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_17px" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="线下一对一"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_15sp" />

            <View style="@style/line_style" />

            <LinearLayout style="@style/linlayout_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程名称"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/et_offlinedetail_coursename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp"
                    tools:text="课程名称" />

            </LinearLayout>

            <View style="@style/line_style" />

            <LinearLayout style="@style/linlayout_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="授课科目"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/tv_offlinedetail_subjectname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp"
                    tools:text="授课科目" />

            </LinearLayout>

            <View style="@style/line_style" />

            <LinearLayout style="@style/linlayout_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="授课阶段"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/tv_offlinedetail_stage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp"
                    tools:text="授课阶段" />

            </LinearLayout>

            <View style="@style/line_style" />

            <LinearLayout style="@style/linlayout_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单次时长"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/et_offlinedetail_singletime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:background="@null"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/size_14sp"
                    tools:text="单次时长" />
            </LinearLayout>

            <View style="@style/line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学生上门"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/et_offlinedetail_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp"
                    tools:text="请输入价格（0.1-9999）" />

            </LinearLayout>

            <View style="@style/line_style" />

            <LinearLayout style="@style/linlayout_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老师上门"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />


                <TextView
                    android:id="@+id/et_offlinedetail_teach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:background="@null"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/size_14sp"
                    tools:text="请输入价格（0.1-9999）" />


            </LinearLayout>

            <View style="@style/line_style" />

            <LinearLayout style="@style/linlayout_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="校区上课"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/et_offlinedetail_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:background="@null"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp"
                    tools:text="请输入价格（0.1-9999）" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_ffffff"
                android:orientation="horizontal"
                android:gravity="left"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程简介"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/et_offlinedetail_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:gravity="left"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp"
                    tools:text="请输入课程简介" />

            </LinearLayout>
            <TextView
                android:id="@+id/et_offlinedetail_infonum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:text="0字"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_ffffff"
                android:orientation="horizontal"
                android:gravity="left"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家长试听"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/tv_offlinedetail_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:gravity="left"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp"
                    tools:text="请输入课程简介" />

            </LinearLayout>



            <Button
                android:id="@+id/btn_offlinedetail_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="删除"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/size_15sp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
