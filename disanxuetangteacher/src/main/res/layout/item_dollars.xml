<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_minewall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_minewall"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_16sp"
                tools:text="名称" />

            <TextView
                android:id="@+id/bt_mine_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="提现成功"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/size_10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_mine_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_minewall"
            android:layout_toEndOf="@+id/iv_minewall"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_14sp"
            tools:text="高中语文-高中语文现代文阅读与理解" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:layout_below="@+id/tv_mine_class_name"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_mine_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp"
                tools:text="11-21 9:30" />

            <TextView
                android:id="@+id/tv_mine_deduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_13sp"
                android:visibility="gone"
                tools:text="抵扣：" />

            <TextView
                android:id="@+id/tv_deduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_1d97ea"
                android:textSize="@dimen/size_13sp"
                android:layout_alignParentRight="true"
                tools:text="-¥200.00" />
        </RelativeLayout>

    </RelativeLayout>
    <View style="@style/line_style" />

</LinearLayout>