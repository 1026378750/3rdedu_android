<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background_res="@drawable/status_bgcolor"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_white_left_arrow"
        app:show_left_button="true"
        app:title_text="订单详情"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_17px" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:background="@color/color_ffffff"
                android:padding="10dp">

                <TextView
                    android:id="@+id/order_method_mame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_16sp"
                    tools:text="线下1对1" />

                <TextView
                    android:id="@+id/order_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/order_method_mame"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp"
                    tools:text="老师上门" />

                <TextView
                    android:id="@+id/order_sub_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp"
                    tools:text="待支付" />
            </RelativeLayout>

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="订单编号"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_orderpay_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingBottom="10dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="下单时间"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <RelativeLayout
                android:id="@+id/rl_offline_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_16sp"
                    tools:text="高中语文-高中语文现代文阅读理解" />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/size_12sp"
                    tools:text="1小时/次" />

                <TextView
                    android:id="@+id/tv_order_type_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_type"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:paddingTop="@dimen/size_10dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp"
                    tools:text="增加学生对现代文的于都理解能力，增加学生对现代文…" />
            </RelativeLayout>

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_teaching_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="授课方式"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_one_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="课程单价"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_one_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="课时次数"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/color_ffffff">

                <TextView
                    android:id="@+id/tv_order_class_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="课表"
                    android:minEms="3"
                    android:gravity="right"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/tv_order_class_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/size_14sp"
                    tools:text="2017-12-13 周三 19:00" />

                <TextView
                    android:id="@+id/tv_order_class_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="全部"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:textColor="@color/color_ff1d97ea"
                    android:textSize="@dimen/size_14sp" />
            </LinearLayout>

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_parent_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="家长昵称"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_parent_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="家长手机"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:right_button_textColor="@color/color_333333"
                app:title_textSize="@dimen/size_14px" />

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="学生姓名"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_student_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="学生性别"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_student_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="学生地址"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <com.main.disanxuelib.view.CommonCrosswise
                android:id="@+id/ccb_order_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:paddingTop="10dp"
                app:bar_background="@color/color_ffffff"
                app:left_button_text="优惠信息"
                app:left_button_textColor="@color/color_666666"
                app:left_button_textSize="@dimen/size_12px"
                app:title_textSize="@dimen/size_14px" />

            <TextView
                android:id="@+id/tv_offline_sumprice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:layout_marginTop="1dp"
                android:paddingRight="10dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical|right"
                tools:text="总价：¥999.00" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/bt_mine_offlineorder_delte"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/size_10dp"
        android:background="@drawable/btn_bg_default_cancel"
        android:text="删除"
        android:textColor="@color/color_ffffff"
        android:visibility="gone" />
</LinearLayout>