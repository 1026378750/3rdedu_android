<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_help_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/status_teacher_bgcolor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_help_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_white_left_arrow"
            android:gravity="center"
            android:paddingLeft="10dp" />

        <RelativeLayout
            android:id="@+id/img_help_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/seach_edittext2">

            <EditText
                android:id="@+id/et_head_searchtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_white_search"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:hint="有问题在这里搜搜看"
                android:imeOptions="actionSearch"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/color_ffffff"
                android:textColorHint="@color/color_ffffff"
                android:textSize="@dimen/size_11sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_minehelp_tell"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@mipmap/btn_white_help" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_help_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="注册登录"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tv_help_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="实名认证"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tv_help_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="我的助教"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_help_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="课程管理"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tv_help_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="我的钱包"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="猜你要问"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                android:textStyle="bold" />

            <com.main.disanxuelib.view.CommonCrosswiseBar
                android:id="@+id/ccb_help_rhesmrz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:left_button_text="如何进行实名认证？"
                app:left_button_textColor="@color/color_333333"
                app:left_button_textSize="@dimen/size_12px"
                app:right_button_image="@mipmap/ic_black_right_arrow"
                app:show_right_button="true" />

            <TextView
                android:id="@+id/tv_help_rhesmrz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:padding="10dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp"
                android:visibility="gone" />

            <View style="@style/line_style" />


            <com.main.disanxuelib.view.CommonCrosswiseBar
                android:id="@+id/ccb_help_rhebdzj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_button_text="如何绑定助教？"
                app:left_button_textColor="@color/color_333333"
                app:left_button_textSize="@dimen/size_12px"
                app:right_button_image="@mipmap/ic_black_right_arrow"
                app:show_right_button="true" />

            <TextView
                android:id="@+id/tv_help_rhebdzj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:padding="10dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp"
                android:visibility="gone" />


            <View style="@style/line_style" />

            <com.main.disanxuelib.view.CommonCrosswiseBar
                android:id="@+id/ccb_help_rhezlsz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_button_text="如何完善资料和进行开课设置？"
                app:left_button_textColor="@color/color_333333"
                app:left_button_textSize="@dimen/size_12px"
                app:right_button_image="@mipmap/ic_black_right_arrow"
                app:show_right_button="true" />

            <View style="@style/line_style" />

            <TextView
                android:id="@+id/tv_help_rhezlsz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:padding="10dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp"
                android:visibility="gone"
                tools:text="" />

            <View style="@style/line_style" />

            <com.main.disanxuelib.view.CommonCrosswiseBar
                android:id="@+id/ccb_help_rhetxdz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_button_text="提现要多久能到账？"
                app:left_button_textColor="@color/color_333333"
                app:left_button_textSize="@dimen/size_12px"
                app:right_button_image="@mipmap/ic_black_right_arrow"
                app:show_right_button="true" />

            <TextView
                android:id="@+id/tv_help_rhetxdz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:padding="10dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_10sp"
                android:visibility="gone" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>