<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/list_margin"
    android:paddingRight="@dimen/list_margin">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/com_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_home"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/txt_ymfz_mc"
            style="@style/listitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的老师"
            android:layout_toLeftOf="@+id/txt_available"
            android:layout_toEndOf="@+id/com_rb" />

        <ImageView
            android:id="@+id/img_arrow"
            style="@style/listitem_arrow"
            android:layout_alignParentRight="true"
            android:src="@mipmap/nav_arrow_right" />

        <TextView
            android:id="@+id/txt_available"
            style="@style/listitem_status"
            android:layout_toLeftOf="@+id/img_arrow"
            android:gravity="center"
            android:text="" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout1"
        android:background="@color/bg1" />

</RelativeLayout>