<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_offlineclazz"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10dp"
    android:background="@color/color_ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="horizontal"
        android:padding="@dimen/size_10dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_class_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@mipmap/default_error" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_class_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_16sp"
                    tools:text="高中语文-高中语文文言文阅读…" />

                <TextView
                    android:id="@+id/tv_class_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2/10 人"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_class_details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp"
                tools:text="科目 阶段" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="right|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_class_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/size_12sp"
                    tools:text="2小时/次，共20次" />

                <TextView
                    android:id="@+id/tv_class_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingLeft="@dimen/size_10dp"
                    android:textColor="@color/color_ffae12"
                    android:textSize="@dimen/size_16sp"
                    tools:text="¥4000" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>