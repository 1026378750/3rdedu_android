<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    >

    <ImageView
        android:id="@+id/iv_oneone_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_personal_avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/iv_oneone_image"
        android:layout_alignTop="@+id/iv_oneone_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/iv_oneone_image">

        <TextView
            android:id="@+id/iv_oneone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_launcher"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_17sp"
            tools:text="老师名称" />


        <TextView
            android:id="@+id/tv_hot_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_oneone_name"
            android:layout_marginTop="6dp"
            android:text="上海-虹口区"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_10sp" />


        <TextView
            android:id="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_oneone_price"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:text="/小时起"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_9sp" />

        <TextView
            android:id="@+id/iv_oneone_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/iv_time"
            android:textColor="@color/color_ffae12"
            android:textSize="@dimen/size_14sp"
            tools:text="授课价格" />

        <TextView
            android:id="@+id/iv_oneone_priprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/iv_oneone_price"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_9sp"
            tools:text="原价" />


        <TextView
            android:id="@+id/iv_oneone_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hot_city"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_12sp"
            tools:text="老师基础信息" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/iv_oneone_message">

            <ImageView
                android:id="@+id/iv_quality_certification"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:scaleType="fitStart"
                android:visibility="gone"
                android:src="@mipmap/ic_quality_certification"/>

            <ImageView
                android:id="@+id/iv_realname_certification"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:scaleType="fitStart"
                android:visibility="gone"
                android:src="@mipmap/ic_realname_authentication"/>

            <ImageView
                android:id="@+id/iv_teacher_certification"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:scaleType="fitStart"
                android:visibility="gone"
                android:src="@mipmap/ic_teacher_certification"/>

            <ImageView
                android:id="@+id/iv_education_certification"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:scaleType="fitStart"
                android:visibility="gone"
                android:src="@mipmap/ic_education_certification"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/iv_oneone_latelycourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_oneone_image"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/iv_oneone_image"
        android:drawableLeft="@mipmap/ic_lately_course"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_12sp"
        tools:text="最近开课" />

    <View
        android:id="@+id/v_oneone_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_oneone_latelycourse"
        android:background="@color/background_color" />


</RelativeLayout>
