<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_minecourse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/common_bar_leftBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_black_left_arrow"
            android:drawablePadding="8dp"
            android:padding="10dp" />

        <RadioGroup
            android:id="@+id/rg_minecourse_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <RadioButton
                android:id="@+id/rg_minecourse_minecourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/selector_shape_left"
                android:text="我的课程"
                android:checked="true"
                android:textSize="@dimen/size_14sp"
                android:textColor="@drawable/selector_textcolor_whiteyellow"
                android:gravity="center"
                />

            <RadioButton
                android:id="@+id/rg_minecourse_mineschedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/selector_shape_right"
                android:text="我的课表"
                android:textSize="@dimen/size_14sp"
                android:textColor="@drawable/selector_textcolor_whiteyellow"
                android:gravity="center"
                />

        </RadioGroup>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        />
</LinearLayout>
