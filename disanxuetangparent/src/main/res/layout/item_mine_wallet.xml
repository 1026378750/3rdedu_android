<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_home_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_minewall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/dialog_new_version" />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_minewall"
            tools:text="订单编号：362874687164"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_13sp" />

        <TextView
            android:id="@+id/tv_mine_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_minewall"
            android:layout_alignStart="@+id/tv_order_number"
            android:layout_marginBottom="5dp"
            tools:text="高中语文-高中语文现代文阅读与理解"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_10sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_mine_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="11-21 9:30"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp" />

        <TextView
            android:id="@+id/tv_mine_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="抵扣："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_13sp" />
        <TextView
            android:id="@+id/tv_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-¥200.00"
            android:textColor="@color/color_d92b2b"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>

    <View
        android:id="@+id/tv_mine_line"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>