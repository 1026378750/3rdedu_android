<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_order_course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_subjct_class_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_14sp"
            tools:text="在线直播课" />

        <TextView
            android:id="@+id/tv_subject_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_subjct_class_type"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_12sp"
            tools:text="普通大班课" />

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_14sp"
            tools:text="已支付" />
        <TextView
            android:id="@+id/tv_del_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_14sp"
            android:visibility="gone"
            tools:text="删除" />

    </RelativeLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/iv_video_photo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/default_error"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_hot_photo"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/default_error"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_hot_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="left"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp"
                tools:text="课程名称" />

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_12sp"
                tools:text="高中语文瓜老师" />

            <TextView
                android:id="@+id/tv_hot_clazz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_12sp"
                tools:text="课程类型" />

            <TextView
                android:id="@+id/tv_hot_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_12sp"
                tools:text="时间" />

        </LinearLayout>

    </LinearLayout>


    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp"
            tools:text="2018-03-28 19:30" />
        <TextView
            android:id="@+id/tv_hot_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_12sp"
            tools:text="共20次，" />
        <TextView
            android:id="@+id/tv_hot_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_14sp"
            android:text=""
            tools:text="总价：" />

        <TextView
            android:id="@+id/tv_hot_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffae12"
            android:textSize="@dimen/size_14sp"
            tools:text="¥10999.00" />

        <TextView
            android:id="@+id/tv_hot_paymethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp"
            android:visibility="gone"
            tools:text="(已抵扣¥200.00)" />

        <TextView
            android:id="@+id/bt_hot_status"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:background="@drawable/btn_bg_default_ok"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_12sp"
            tools:text="立即支付" />

    </LinearLayout>

</LinearLayout>
