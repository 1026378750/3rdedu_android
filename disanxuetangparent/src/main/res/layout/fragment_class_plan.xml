<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_liveplan_nofity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_time_min"
        tools:text="  2017-08-20开课，2017-12-30结课，共8节"
        android:textColor="@color/color_333333"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/size_14sp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_ffffff"
        />

    <com.main.disanxuelib.view.RefreshCommonView
        android:id="@+id/rcv_mine_commonlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        app:orientation="vertical"
        app:vessel_type="RecyclerView"
        app:noneText="暂无课程安排"
        app:bottonViewText="我是有底线的~~~"
        app:noneImage="@mipmap/ic_norecord"
        />

</LinearLayout>
