<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TODO: Update blank fragment layout -->
            <ImageView
                android:id="@+id/iv_solive_cover"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="fitXY"
                android:src="@mipmap/loading_figure" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_solive_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2017暑期语文辅导课程"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tv_solive_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    tools:text="¥399.00"
                    android:textColor="@color/color_ffae12"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tv_solive_preprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_solive_price"
                    android:layout_marginTop="2dp"
                    tools:text="¥399.00"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/size_10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_solive_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/color_ffffff"
                android:padding="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/iv_solive_teacherimage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_personal_avatar" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignTop="@+id/iv_solive_teacherimage"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/iv_solive_teacherimage">

                    <TextView
                        android:id="@+id/tv_solive_teachername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/size_14sp"
                        tools:text="老师名称" />

                    <ImageView
                        android:id="@+id/iv_solive_isplant"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_solive_teachername"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentTop="true"
                        android:visibility="gone"
                        android:layout_alignBottom="@+id/tv_solive_teachername" />

                    <TextView
                        android:id="@+id/tv_solive_teachermessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/size_12sp"
                        tools:text="老师基础信息" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <ImageView
                            android:id="@+id/iv_quality_certification"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:scaleType="fitStart"
                            android:visibility="gone"
                            android:src="@mipmap/ic_quality_certification"/>

                        <ImageView
                            android:id="@+id/iv_realname_certification"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:scaleType="fitStart"
                            android:visibility="gone"
                            android:src="@mipmap/ic_realname_authentication"/>

                        <ImageView
                            android:id="@+id/iv_teacher_certification"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:scaleType="fitStart"
                            android:visibility="gone"
                            android:src="@mipmap/ic_teacher_certification"/>

                        <ImageView
                            android:id="@+id/iv_education_certification"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:scaleType="fitStart"
                            android:visibility="gone"
                            android:src="@mipmap/ic_education_certification"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_black_right_arrow" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_solive_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/color_ffffff"
                android:drawableLeft="@mipmap/ic_course_min"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_14sp"
                tools:text="最近开课" />

            <TextView
                android:id="@+id/tv_solive_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:drawableLeft="@mipmap/ic_time_min"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_14sp"
                tools:text="时间" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_ffffff"
                android:drawableLeft="@mipmap/class_details"
                android:drawablePadding="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:text="课程须知"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp" />

            <TextView
                android:id="@+id/tv_solive_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_12sp"
                tools:text="课程须知" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_ffffff"
                android:drawableLeft="@mipmap/class_details"
                android:drawablePadding="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:text="课程简介"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp" />

            <TextView
                android:id="@+id/tv_solive_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_12sp"
                tools:text="课程简介" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_ffffff"
                android:drawableLeft="@mipmap/class_details"
                android:drawablePadding="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:text="教学目标"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp" />

            <TextView
                android:id="@+id/tv_solive_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_12sp"
                tools:text="教学目标" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_ffffff"
                android:drawableLeft="@mipmap/class_details"
                android:drawablePadding="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:text="适用人群"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_14sp" />

            <TextView
                android:id="@+id/tv_solive_suit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_12sp"
                tools:text="使用人群" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>