<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_button_image="@mipmap/login_close"
        app:show_right_button="true"
        app:title_editSize="@dimen/size_15px"
        app:title_text="登录注册"
        app:isTopBar="true"
        app:show_line="false"
        app:title_textColor="@color/color_333333" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/login_tuceng" />

    <com.main.disanxuelib.view.CommonEditView
        android:id="@+id/et_login_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:left_imageRes="@mipmap/login_user"
        app:right_imageRes="@mipmap/login_close"
        app:content_hintColor="@color/color_cbcbcb"
        app:content_textColor="@color/color_333333"
        app:content_hintText="请输入11位手机号"
        app:content_textSize="@dimen/size_14px"
        app:padding_left="40px"
        app:padding_right="40px"
        app:is_listener_input="true"
        app:show_edit_line="true"
        app:is_listener_clear="true"
        />

    <com.main.disanxuelib.view.CommonEditView
        android:id="@+id/et_login_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:left_imageRes="@mipmap/login_verification"
        app:content_hintColor="@color/color_cbcbcb"
        app:content_textColor="@color/color_333333"
        app:content_hintText="请输入6位数验证码"
        app:content_textSize="@dimen/size_14px"
        app:padding_left="40px"
        app:padding_right="40px"
        app:right_text="获取验证码"
        app:right_textColor="@color/color_ffae12"
        app:right_textSize="@dimen/size_14px"
        app:show_rightLine="true"
        app:is_listener_input="true"
        app:is_showRight="true"
        app:show_edit_line="true"
        app:limit_input_num="6"
        />

    <Button
        android:id="@+id/bt_login_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_bg_default_cancel"
        android:text="登录／注册"
        android:enabled="false"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/size_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击 登录／注册 表示您已阅读并同意"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_12sp" />
        <TextView
            android:id="@+id/tv_login_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="《第三学堂服务协议》"
            android:textColor="@color/color_0d3662"
            android:textSize="@dimen/size_12sp" />

    </LinearLayout>


</LinearLayout>
