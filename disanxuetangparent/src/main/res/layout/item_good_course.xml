<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/color_ffffff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/video_item"
        >

    <ImageView
        android:id="@+id/im_course_photo"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_error" />

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_course_photo"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:paddingBottom="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_14sp"
        tools:text="名称" />

    <TextView
        android:id="@+id/tv_course_clazz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_course_name"
        android:layout_marginTop="2dp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:ellipsize="end"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_11sp"
        tools:text="分类名称" />

    <TextView
        android:id="@+id/tv_course_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_course_clazz"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_11sp"
        tools:text="讲师名称" />

    <TextView
        android:id="@+id/tv_course_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_course_clazz"
        android:layout_marginTop="-18dp"
        android:paddingRight="5dp"
        android:ellipsize="end"
        android:maxLength="10"
        android:maxLines="1"
        android:textColor="@color/color_ffae12"
        android:textSize="@dimen/size_14sp"
        tools:text="原价" />

    <TextView
        android:id="@+id/tv_course_priprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_course_price"
        android:ellipsize="end"
        android:paddingRight="5dp"
        android:maxLength="10"
        android:maxLines="1"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_10sp"
        tools:text="原价" />
    </RelativeLayout>
</RelativeLayout>
