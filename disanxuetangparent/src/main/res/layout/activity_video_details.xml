<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_video_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/iv_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/loading_figure"
        />
    <RelativeLayout
        android:id="@+id/rl_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_online"
        android:background="@color/color_ffffff"
        >
        <TextView
            android:id="@+id/tv_class_remind"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            tools:text="名称"
            android:textSize="@dimen/size_14sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="17dp"
            />
        <TextView
            android:id="@+id/tv_class_montey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="¥399.00"
            android:paddingRight="17dp"
            android:textSize="@dimen/size_14sp"
            android:textColor="@color/color_ffae12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="¥399.00"
            android:paddingRight="17dp"
            android:textSize="@dimen/size_10sp"
            android:textColor="@color/color_999999"
            android:layout_below="@+id/tv_class_montey"
            />
    </RelativeLayout>
    <View
        android:id="@+id/v_dv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_below="@+id/rl_teacher"
        />

    <RelativeLayout
        android:id="@+id/rl_titem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:layout_below="@+id/rl_teacher"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv_videoclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/video_class"
            android:layout_marginLeft="17dp"


            />
        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类：亲子教育"
            android:layout_toRightOf="@+id/iv_videoclass"
            android:layout_margin="8dp"
            android:textSize="@dimen/size_14sp"
            />

        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讲师：李老师"
            android:paddingRight="10dp"
            android:textSize="@dimen/size_14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_below="@+id/rl_titem"
        android:background="@color/color_ffffff"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_class_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/class_details"
                android:layout_marginLeft="18dp"
                />
            <TextView
                android:id="@+id/tv_class_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_class_details"
                android:text="课程须知"
                android:layout_marginLeft="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_class_details"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:text="如何让孩子和家长和平相处，孩子和家长和平相处，孩子和家长讨论怎么教养好脾气的孩子！"
                />
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rule_default_ok"
        android:text="@string/now_buy"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/size_16sp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
