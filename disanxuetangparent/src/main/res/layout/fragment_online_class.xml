<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:id="@+id/fragment_online_class"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_minecourse_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/rg_minecourse_minecourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_shape_left"
            android:text="直播课"
            android:checked="true"
            android:textSize="@dimen/size_12sp"
            android:textColor="@drawable/selector_textcolor_whiteyellow"
            android:gravity="center"
            />
        <RadioButton
            android:id="@+id/rg_minecourse_mineschedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_shape_right"
            android:text="品牌课"
            android:textSize="@dimen/size_12sp"
            android:textColor="@drawable/selector_textcolor_whiteyellow"
            android:gravity="center"
            />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
