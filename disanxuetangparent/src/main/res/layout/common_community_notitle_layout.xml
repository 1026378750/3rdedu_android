<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.main.disanxuelib.view.DropDownMenu
        android:id="@+id/ddm_common_dropmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:ddmaskColor="@color/transparent_50"
        app:ddmenuTableColor="@color/color_ffffff"
        app:ddmenuTitleHeight="43px"
        app:ddmenuSelectedIcon="@mipmap/ic_yellow_drop_up"
        app:ddmenuUnselectedIcon="@mipmap/ic_black_drop_down"
        app:ddtextSelectedColor="@color/color_ffae12"
        app:ddtextUnselectedColor="@color/color_999999"
        app:ddunderlineColor="@color/background_color" />

    <com.main.disanxuelib.view.RefreshCommonView
        android:id="@+id/rcv_mine_commonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottonViewText="我是有底线的~~~"
        app:content_bgColor="@color/color_ffffff"
        app:noneText="暂时没有相关信息哦~"
        app:orientation="vertical"
        app:paddingSize="8px"
        app:row_num="2"
        app:vessel_type="RecyclerView" />
</LinearLayout>