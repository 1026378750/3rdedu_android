<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    >

    <ImageView
        android:id="@+id/tv_recommend_image"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_iamge" />

    <TextView
        android:id="@+id/tv_recommend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_13sp"
        tools:text="名称" />

    <TextView
        android:id="@+id/tv_recommend_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_10sp"
        tools:text="科目" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        >
        <TextView
            android:id="@+id/tv_recommend_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp"
            tools:text="数量"
            />
        <TextView
            android:id="@+id/tv_recommend_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffae12"
            android:textSize="@dimen/size_14sp"
            android:layout_centerVertical="true"
            tools:text="价钱"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="7dp"
        >
        <ImageView
            android:id="@+id/tv_recommend_teacherphone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/teacher"
            />

        <TextView
            android:id="@+id/tv_recommend_teachername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_13sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="老师名称"
            />
    </LinearLayout>
</LinearLayout>