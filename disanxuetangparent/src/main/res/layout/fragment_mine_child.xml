<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_headimage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@mipmap/ic_personal_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nicename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/text1"
                android:textSize="@dimen/size_14sp" />

            <TextView
                android:id="@+id/tv_phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="手机号码"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_usermesg"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_left_yellow"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mineorder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/mine_order"
            android:gravity="center"
            android:padding="15dp"
            android:text="我的订单"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_minecourse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/mine_class"
            android:gravity="center"
            android:padding="15dp"
            android:text="我的课程"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_12sp" />

    </LinearLayout>

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_mineteacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@mipmap/ic_teacher_btn"
        app:left_button_size="@dimen/size_18px"
        app:left_button_text="我的老师"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_14px"
        app:right_button_image="@mipmap/ic_black_right_arrow"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_mineteacher_ssistant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@mipmap/ic_zujiao_btn"
        app:left_button_size="@dimen/size_18px"
        app:left_button_text="我的助教"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_14px"
        app:right_button_image="@mipmap/ic_black_right_arrow"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_minemessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@mipmap/ic_mesg_btn"
        app:left_button_size="@dimen/size_18px"
        app:left_button_text="我的消息"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_14px"
        app:right_button_image="@mipmap/ic_black_right_arrow"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_minewallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@mipmap/ic_wallet_btn"
        app:left_button_size="@dimen/size_18px"
        app:left_button_text="我的钱包"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_14px"
        app:right_button_image="@mipmap/ic_black_right_arrow"
        app:show_left_button="true"
        app:show_line="false"
        app:show_right_button="true" />

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@mipmap/ic_help_btn"
        app:left_button_size="@dimen/size_18px"
        app:left_button_text="帮助中心"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_14px"
        app:right_button_image="@mipmap/ic_black_right_arrow"
        app:show_left_button="true"
        app:show_line="false"
        app:show_right_button="true" />

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@mipmap/ic_setting_btn"
        app:left_button_size="@dimen/size_18px"
        app:left_button_text="设置"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_14px"
        app:right_button_image="@mipmap/ic_black_right_arrow"
        app:show_left_button="true"
        app:show_line="false"
        app:show_right_button="true" />
</LinearLayout>