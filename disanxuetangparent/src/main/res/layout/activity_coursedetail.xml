<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/ab_course_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_00000000">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/iv_course_bg"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/default_iamge"
                    app:layout_collapseMode="parallax" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:background="@color/color_ffffff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_class_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/size_16sp"
                                tools:text="高中语文-高中语文文言文阅读…" />

                            <TextView
                                android:id="@+id/tv_class_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2/10 人"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/size_12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_class_details"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/size_12sp"
                            tools:text="科目 阶段" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_class_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/size_12sp"
                                tools:text="2小时/次，共20次" />

                            <TextView
                                android:id="@+id/tv_class_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingLeft="@dimen/size_10dp"
                                android:textColor="@color/color_d92b2b"
                                android:textSize="@dimen/size_16sp"
                                tools:text="¥4000" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/background_color"
                        app:layout_scrollFlags="scroll" />

                    <LinearLayout
                        android:id="@+id/ll_course_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iv_class_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/ic_personal_avatar" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp">

                            <TextView
                                android:id="@+id/tv_class_teachername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="10"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/size_14sp"
                                tools:text="老师名称" />

                            <ImageView
                                android:id="@+id/iv_class_isplant"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignBottom="@+id/tv_class_teachername"
                                android:layout_alignTop="@+id/tv_class_teachername"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="1dp"
                                android:layout_toEndOf="@+id/tv_class_teachername"
                                android:src="@mipmap/ic_launcher"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_class_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/size_10sp"
                                tools:text="老师基础信息" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true">

                                <ImageView
                                    android:id="@+id/iv_quality_certification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="11dp"
                                    android:scaleType="fitStart"
                                    android:src="@mipmap/ic_quality_certification"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/iv_realname_certification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="11dp"
                                    android:scaleType="fitStart"
                                    android:src="@mipmap/ic_realname_authentication"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/iv_teacher_certification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="11dp"
                                    android:scaleType="fitStart"
                                    android:src="@mipmap/ic_teacher_certification"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/iv_education_certification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="11dp"
                                    android:scaleType="fitStart"
                                    android:src="@mipmap/ic_education_certification"
                                    android:visibility="gone" />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/background_color"
                        app:layout_scrollFlags="scroll" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="授课地址"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/size_14sp" />

                        <TextView
                            android:id="@+id/tv_course_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/size_14sp"
                            tools:text="授课地址" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/background_color"
                        app:layout_scrollFlags="scroll" />
                </LinearLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/appbar_course_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <com.main.disanxuelib.view.CommonCrosswiseBar
                        android:id="@+id/ccb_course_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:bar_background="@color/color_00000000"
                        app:isTopBar="true"
                        app:left_button_image="@mipmap/ic_white_left_arrow"
                        app:right_button_image="@mipmap/abc_ic_menu_share_alpha"
                        app:show_left_button="true"
                        app:show_line="false"
                        app:show_right_button="false"
                        app:title_text="课程详情"
                        app:title_textColor="@color/color_00000000"
                        app:title_textSize="@dimen/size_17px"
                        app:view_alpha_showType="TitleView" />
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

            <com.main.disanxuelib.view.PagerSlidingTabStrip
                android:id="@+id/pst_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_12sp"
                app:pstsDividerColor="@color/color_00000000"
                app:pstsIndicatorColor="@color/color_ffae12"
                app:pstsIndicatorHeight="2dp"
                app:pstsIndicatorWight="700px"
                app:pstsSelectTabTextColor="@color/color_ffae12"
                app:pstsSelectTabTextSize="@dimen/size_14sp"
                app:pstsShouldExpand="true"
                app:pstsTabBackground="@color/color_ffffff"
                app:pstsTextAllCaps="false"
                app:pstsUnderlineColor="@color/line_color"
                app:pstsUnderlineHeight="0.5dp" />
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_course_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </android.support.design.widget.CoordinatorLayout>


    <LinearLayout
        android:id="@+id/ll_coureseditail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:background="@color/line_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_weight="2"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_createschedule_payprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffae12"
                android:textSize="@dimen/size_20sp"
                tools:text="价格" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_createschedule_preprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/size_10sp"
                    tools:text="价格" />

                <TextView
                    android:id="@+id/tv_createschedule_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/size_10sp"
                    tools:text="价格" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_createschedule_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/btn_bg_default_corner"
            android:enabled="true"
            android:text="立即报名"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>
</LinearLayout>