<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.main.disanxuelib.view.CommonCrosswiseBar
        android:id="@+id/ccb_payresult_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:isTopBar="true"
        app:title_text="支付成功"
        app:title_textColor="@color/color_333333"
        app:title_textSize="@dimen/size_18px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/tv_payresult_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/btn_payok"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="支付成功"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_payresult_goorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="查看订单"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/color_ffae12" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tv_payresult_gomain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="返回首页"
                android:textSize="@dimen/size_14sp"
                android:textColor="@color/color_ffae12" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
