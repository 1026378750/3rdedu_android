<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_minewall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_minewall"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_16sp"
                tools:text="名称" />

            <Button
                android:id="@+id/bt_mine_type"
                android:layout_width="44dp"
                android:layout_height="16dp"
                android:background="@drawable/btn_bg_default_ok"
                android:text="老师上门"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/size_10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_mine_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_minewall"
            android:layout_toEndOf="@+id/iv_minewall"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_14sp"
            tools:text="高中语文-高中语文现代文阅读与理解" />

    </RelativeLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_mine_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/size_10sp"
            tools:text="11-21 9:30" />

        <TextView
            android:id="@+id/tv_mine_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_13sp"
            android:visibility="gone"
            tools:text="抵扣：" />

        <TextView
            android:id="@+id/tv_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_d92b2b"
            android:textSize="@dimen/size_13sp"
            tools:text="-¥200.00" />
    </LinearLayout>

</LinearLayout>