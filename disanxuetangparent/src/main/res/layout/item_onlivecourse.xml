<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_offlineclazz"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/color_ffffff"
    android:layout_marginBottom="@dimen/size_10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:padding="@dimen/size_10dp"
        >
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        >

        <ImageView
            android:id="@+id/iv_hot_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/default_error" />

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="互动小班课"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_12sp"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:gravity="center"
            android:background="@color/transparent_f0f5"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_subjct_class_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="高中语文-高中语文文言文阅读…"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_16sp"
            />

        <TextView
            android:id="@+id/tv_subjct_class_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="增加学生对现代文的于都理解能力，增加学 生对现代文…"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp"
            android:gravity="right"
            >

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_12sp"
                tools:text="2小时/次，共20次" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="@dimen/size_10dp"
                android:paddingLeft="@dimen/size_10dp"
                android:textColor="@color/color_d92b2b"
                android:textSize="@dimen/size_16sp"
                tools:text="¥4000" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>