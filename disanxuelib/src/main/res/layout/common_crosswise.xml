<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:id="@+id/common_bar"
    android:background="@color/color_ffffff"
    >

    <TextView
        android:id="@+id/common_bar_leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:text="左边按钮"
        android:gravity="center_vertical"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/size_12sp"
        />

    <EditText
        android:id="@+id/common_bar_et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_edittext_shape"
        android:layout_toEndOf="@+id/common_bar_leftBtn"
        android:layout_toStartOf="@+id/common_bar_rightBtn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:drawableRight="@drawable/iv_delete_bg"
        android:textSize="@dimen/size_15sp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/common_bar_rightImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/common_bar_rightBtn"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:scaleType="fitEnd"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/common_bar_rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="右边按钮"
        android:padding="10dp"
        android:gravity="center_vertical|right"
        android:drawablePadding="8dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxEms="18"
        />

    <TextView
        android:id="@+id/common_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="第三学堂"
        android:padding="10dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_14sp"
        android:maxLines="1"
        android:maxLength="18"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/common_bar_leftBtn" />

</RelativeLayout>
